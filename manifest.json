{
  "manifest_version": 3,
  "name": "RAVEN - Marketplace Finder",
  "version": "1.0",
  "description": "Find and track marketplace listings across Craigslist, Ebay, and Facebook Marketplace",
  "icons": {
    "16": "images/icon16.jpg",
    "48": "images/icon48.jpg",
    "128": "images/icon128.jpg"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://*.craigslist.org/*", "*://*.ebay.com/*", "*://www.facebook.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
